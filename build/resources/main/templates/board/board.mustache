{{> other/header }}

<main class="container mx-auto px-4 pt-24 pb-12">
  <div class="flex flex-col md:flex-row gap-8">

    <!-- 왼쪽 메인 콘텐츠 영역 -->
    <div class="w-full md:w-3/4">
      <input type="hidden" id="role" value="{{user.Role}}">
      <input type="hidden" id="board-id" value="{{board.id}}">
      <!-- 게시판 상세 페이지 -->
      <section class="bg-white rounded-lg shadow-sm p-6 border border-gray-100 mb-10">
        <div class="flex justify-between items-center mb-6">
          <h2 class="text-xl font-bold text-gray-800">{{board.name}}</h2>
          <button 
            type="button"
            class="bg-primary text-white text-sm font-medium px-4 py-2 rounded hover:bg-primary-dark shadow transition"
            id="btn-post-write">
            글쓰기
          </button>
        </div>

        <div class="overflow-x-auto">
          <table class="min-w-full">
            <thead>
              <tr class="border-b border-gray-200">
                <th class="py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-16 pl-4">번호</th>
                <th class="py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">제목</th>
                <th class="py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-32">작성자</th>
                <th class="py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-32">작성일</th>
                <th class="py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-24">조회수</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              {{#posts}}
              <tr class="hover:bg-gray-50">
                <td class="py-4 text-sm text-gray-500 pl-4">{{id}}</td>
                <td class="py-4">
                  <div class="flex items-center">
                    {{#isNotice}}
                    <span class="bg-red-100 text-red-600 text-xs px-2 py-0.5 rounded mr-2">공지</span>
                    {{/isNotice}}
                    {{#isHot}}
                    <span class="bg-yellow-100 text-yellow-600 text-xs px-2 py-0.5 rounded mr-2">인기</span>
                    {{/isHot}}
                    <a href="/post-page/{{id}}" class="text-gray-900 font-medium hover:text-primary">{{title}}</a>
                    {{#commentCount}}
                    <span class="ml-2 text-red-500 text-sm">[{{commentCount}}]</span>
                    {{/commentCount}}
                    {{#isNew}}
                    <span class="ml-2 text-xs text-gray-500">New</span>
                    {{/isNew}}
                  </div>
                </td>
                <td class="py-4 text-sm text-gray-500">{{author}}</td>
                <td class="py-4 text-sm text-gray-500">{{createdDate}}</td>
                <td class="py-4 text-sm text-gray-500">{{viewCount}}</td>
              </tr>
              {{/posts}}
            </tbody>
          </table>
        </div>
      </section>
    </div>

    <!-- 오른쪽 사이드바 -->
    {{> other/sidebar }}
  </div>
</main>

{{> other/footer }}
<script src="/js/board.js"></script>