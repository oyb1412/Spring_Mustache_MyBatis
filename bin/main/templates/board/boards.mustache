{{> other/header }}
<main class="container mx-auto px-4 pt-24 pb-12">
  <div class="flex flex-col md:flex-row gap-8">
    <div class="w-full md:w-3/4">
      
      <!-- 브레드크럼 & 제목 -->
      <div class="text-sm text-gray-500 mb-4">
        <a href="/board" class="text-blue-500 hover:underline">게시판</a> &gt; 전체 게시판
      </div>
      <h2 class="text-3xl font-bold text-gray-800 mb-4">전체 게시판 목록</h2>
      <p class="text-gray-500 text-sm mb-8">모든 게시판을 한눈에 볼 수 있어요.</p>

      <!-- 게시판 카드 -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {{#boardList}}
        <div class="bg-white rounded-xl shadow-md p-6 border border-gray-200 hover:shadow-lg transition-all duration-300">
          <div class="flex justify-between items-center mb-2">
            <a href="/board-page/{{id}}" class="text-lg font-bold text-gray-800">
              {{name}}
            </a>
            <span class="text-xs bg-gray-100 text-gray-500 px-2 py-1 rounded-full">게시판</span>
          </div>
          <p class="text-gray-600 text-sm mb-4">{{description}}</p>
          <div class="flex justify-between text-sm text-gray-500">
            <span>오늘 게시물: {{todayPostCount}}</span>
            <span>총 게시물: {{totalPostCount}}</span>
          </div>
        </div>
        {{/boardList}}
      </div>
    </div>

    <!-- 사이드바 -->
    {{> other/sidebar }}
  </div>
</main>
{{>other/footer}}
