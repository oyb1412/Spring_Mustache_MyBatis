{{> other/header}}

<main class="container mx-auto px-4 pt-24 pb-12">
  <div class="max-w-md mx-auto bg-white p-8 rounded-lg shadow-sm border border-gray-100">
    <h1 class="text-2xl font-bold text-gray-800 mb-6 text-center">새 비밀번호 설정</h1>

    <div class="space-y-4">
      <div>
        <label for="newPassword" class="block text-sm font-medium text-gray-700 mb-1">새 비밀번호</label>
        <input type="password" id="newPassword" maxlength="12" placeholder="새 비밀번호를 입력하세요"
               class="w-full px-4 py-2 border border-gray-300 rounded-button text-sm focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent">
      </div>

      <div>
        <label for="confirmPassword" class="block text-sm font-medium text-gray-700 mb-1">새 비밀번호 확인</label>
        <input type="password" id="confirmPassword" maxlength="12" placeholder="비밀번호를 다시 입력하세요"
               class="w-full px-4 py-2 border border-gray-300 rounded-button text-sm focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent">
      </div>

      <div class="space-y-3 pt-2">
        <button type="button" id="btn-reset"
                class="w-full py-2 bg-primary text-white rounded-button hover:bg-blue-600 whitespace-nowrap !rounded-button">확인</button>
        <a href="/" class="block w-full py-2 text-center bg-white border border-gray-300 text-gray-700 rounded-button hover:bg-gray-50 whitespace-nowrap !rounded-button">취소</a>
      </div>
    </div>
  </div>
</main>

{{> other/footer}}
<script src="/js/ResetPassword.js"></script>