{{> other/header}}
<!-- 메인 컨텐츠 -->
<main class="container mx-auto px-4 pt-24 pb-12">
<div class="flex flex-col md:flex-row gap-8">
<!-- 왼쪽 메인 컨텐츠 영역 -->
<div class="w-full md:w-3/4">
<!-- 인기 게시판 섹션 -->
<section class="mb-10">
  <div class="flex justify-between items-center mb-6">
    <h2 class="text-2xl font-bold text-gray-800">인기 게시판</h2>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    {{#popularBoardList}}
    <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-100 transition-all duration-300 card-hover">
      <div class="flex items-center justify-between mb-4">
        <a href="/board-page/{{id}}" class="text-lg font-bold text-gray-800 mb-4 block">
            {{name}}
          </a>
        <span class="bg-blue-100 text-primary text-xs px-2 py-1 rounded-full">인기</span>
      </div>
      <p class="text-gray-600 text-sm mb-4">{{description}}</p>
      <div class="flex justify-between text-sm text-gray-500">
        <span>오늘 게시물: {{todayPostCount}}</span>
        <span>총 게시물: {{totalPostCount}}</span>
      </div>
    </div>
    {{/popularBoardList}}
  </div>
</section>
<!-- 게시판 목록 섹션 -->
<section class="mb-10">
  <h2 class="text-2xl font-bold text-gray-800 mb-8">전체 게시판</h2>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    {{#boardList}}
    <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-100 transition-all duration-300 card-hover">
      <a href="/board-page/{{id}}" class="text-lg font-bold text-gray-800">
            {{name}}
          </a>
      <p class="text-gray-600 text-sm mb-4">{{description}}</p>
      <div class="flex justify-between text-sm text-gray-500">
        <span>오늘 게시물: {{todayPostCount}}</span>
        <span>총 게시물: {{totalPostCount}}</span>
      </div>
    </div>
    {{/boardList}}
  </div>

   <div class="flex justify-center mt-8">
    <a href="/boards-page" class="px-8 py-3 bg-primary text-white rounded-button text-sm hover:bg-blue-600 !rounded-button">
      모든 게시판 보기
    </a>
  </div>
</section>
<!-- 게시판 상세 페이지 (예시) -->
<section class="bg-white rounded-lg shadow-sm p-6 border border-gray-100 mb-10">
  <div class="flex justify-between items-center mb-6">
    <h2 class="text-xl font-bold text-gray-800">인기 게시물</h2>
  </div>

  <div class="overflow-x-auto">
    <table class="min-w-full">
      <thead>
        <tr class="border-b border-gray-200">
          <th class="py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-16 pl-4">번호</th>
          <th class="py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">제목</th>
          <th class="py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-32">작성자</th>
          <th class="py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-32">작성일</th>
          <th class="py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-24">조회수</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        {{#popularPosts}}
        <tr class="hover:bg-gray-50">
          <td class="py-4 text-sm text-gray-500 pl-4">{{id}}</td>
          <td class="py-4">
            <div class="flex items-center">
              {{#isNotice}}
              <span class="bg-red-100 text-red-600 text-xs px-2 py-0.5 rounded mr-2">공지</span>
              {{/isNotice}}
              {{#isHot}}
              <span class="bg-yellow-100 text-yellow-600 text-xs px-2 py-0.5 rounded mr-2">인기</span>
              {{/isHot}}
              <a href="/post-page/{{id}}" class="text-gray-900 font-medium hover:text-primary">{{title}}</a>
              {{#commentCount}}
              <span class="ml-2 text-red-500 text-sm">[{{commentCount}}]</span>
              {{/commentCount}}
              {{#isNew}}
              <span class="ml-2 text-xs text-gray-500">New</span>
              {{/isNew}}
            </div>
          </td>
          <td class="py-4 text-sm text-gray-500">{{author}}</td>
          <td class="py-4 text-sm text-gray-500">{{createdDate}}</td>
          <td class="py-4 text-sm text-gray-500">{{viewCount}}</td>
        </tr>
        {{/popularPosts}}
      </tbody>
    </table>
  </div>
</section>
</div>
{{> other/sidebar}}
</div>
</main>
{{> other/footer}}
