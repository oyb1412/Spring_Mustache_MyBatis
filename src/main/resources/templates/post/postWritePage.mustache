{{> other/header}}

<main class="container mx-auto px-4 pt-24 pb-12">
  <div class="flex flex-col md:flex-row gap-8">

    <!-- 왼쪽 메인 콘텐츠 영역 -->
    <div class="w-full md:w-3/4">

      <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-100">
        <input type="hidden" id="boardId" value="{{board.id}}">
        <!-- 게시판 이름 + 유저 정보 -->
  <h2 class="text-sm text-gray-400 mb-1">게시판: <span class="text-blue-500 font-semibold">{{board.name}}</span></h2>
  <h1 class="text-2xl font-bold text-gray-800 mb-4">📝 글 작성</h1>

<!-- 유저 정보 -->
<div class="mb-6 flex items-center justify-between text-sm text-gray-500">
  <span>작성자: <span class="font-medium text-gray-700">{{user.nickname}}</span></span>
  <span class="text-xs">* 저장 시 자동으로 작성자로 등록됩니다</span>
</div>

<!-- 제목 입력 -->
<div class="mb-4">
  <label for="title" class="block text-sm font-medium text-gray-700 mb-1">제목</label>
  <input type="text" id="title" required
         class="w-full px-4 py-3 border border-gray-300 rounded-lg text-lg font-medium focus:outline-none focus:ring-2 focus:ring-blue-300">
</div>

<!-- 내용 입력 -->
<div class="mb-6">
  <label for="content" class="block text-sm font-medium text-gray-700 mb-1">내용</label>
    <textarea id="summernote" name="content"></textarea>
</div>

  <!-- 파일 선택 -->
  <div class="mb-6 text-center">
    <input
      type="file"
      id="upload-input"
      class="block mx-auto text-sm text-gray-700"
    />
  </div>

<!-- 버튼 -->
<div class="flex justify-end gap-3 mt-6">
  <a href="/board-page/{{board.id}}"
     class="px-5 py-2 text-sm font-medium text-gray-700 bg-gray-100 rounded hover:bg-gray-200">
    취소
  </a>
  <button type="button" id="btn-register"
          class="px-5 py-2 text-sm font-medium text-white bg-blue-600 rounded hover:bg-blue-700">
    확인
  </button>
</div>

      </div>
    </div>

    <!-- 오른쪽 사이드바 -->
    {{> other/sidebar}}

  </div>
</main>

{{> other/footer}}
<script src="/js/postRegister.js"></script>
<script src="/js/summernote.js"></script>